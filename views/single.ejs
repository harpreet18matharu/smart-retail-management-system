<%- include("partials/header", { active: "products", title: product.product_name || "Product Details" }) %>

<main class="container my-5">
  <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
      <a href="/products" class="btn btn-link mb-3 text-decoration-none">&larr; Back to Inventory</a>
  <% } else { %>
      <a href="/shop" class="btn btn-link mb-3 text-decoration-none">&larr; Back to Shop</a>
  <% } %>

  <div class="card shadow-lg overflow-hidden border-0">
    <div class="card-body p-0">
      <div class="row g-0">
        
        <% if (product.image_url) { %>
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="<%= product.image_url %>" 
                     alt="<%= product.product_name %>" 
                     class="img-fluid rounded shadow-sm" 
                     style="max-height: 400px; object-fit: contain;">
            </div>
            <div class="col-md-7">
        <% } else { %>
            <div class="col-12">
        <% } %>

            <div class="p-4 p-md-5">
                <small class="text-uppercase text-muted fw-bold"><%= product.category || 'Uncategorized' %></small>
                <h1 class="fw-bold mb-3 display-5"><%= product.product_name %></h1>
                
                <div class="mb-4">
                    <% if (product.price !== undefined) { %>
                        <h3 class="text-primary fw-bold mb-0">$<%= product.price.toFixed(2) %></h3>
                    <% } %>
                    
                    <div class="mt-2">
                        <% if (product.is_in_stock) { %>
                            <span class="badge bg-success">In Stock</span>
                        <% } else { %>
                            <span class="badge bg-danger">Out of Stock</span>
                        <% } %>
                    </div>
                </div>

                <% if (product.tags && product.tags.length > 0) { %>
                    <div class="mb-4">
                        <p class="mb-2 fw-bold small">Tags:</p>
                        <% product.tags.forEach(tag => { %>
                            <span class="badge bg-light text-dark border me-1"><%= tag %></span>
                        <% }) %>
                    </div>
                <% } %>

                <hr class="my-4">

                <div class="d-flex gap-3">
                    <button type="button" class="btn btn-primary btn-lg px-4 btn-add-cart" data-id="<%= product._id %>">
                        Add to Cart
                    </button>
                    </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("partials/footer") %>