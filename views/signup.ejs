<%- include('partials/header', { title: 'Sign Up', active: 'signup' }) %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 450px; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center mb-4 fw-bold">Create Account</h2>
            
            <form action="/signup" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Choose a Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="e.g. YourName" required>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Choose a Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2">Sign Up</button>
            </form>

            <div class="text-center mt-3">
                <small>Already have an account? <a href="/login">Login here</a></small>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>