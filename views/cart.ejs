<%- include("partials/header", { active: "", title: "My Shopping Cart" }) %>

<main class="container py-5">
    <h2 class="fw-bold mb-4">Your Shopping Cart</h2>

    <% if (cart.length === 0) { %>
        <div class="text-center py-5">
            <h1 class="display-1">ðŸ›’</h1>
            <h4 class="text-muted">Your cart is empty</h4>
            <a href="/shop" class="btn btn-primary mt-3">Start Shopping</a>
        </div>
    <% } else { %>
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 table-hover">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Product</th>
                                        <th>Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cart.forEach(item => { %>
                                        <tr>
                                            <td class="ps-4">
                                                <a href="/shop/<%= item.productId._id %>" class="text-decoration-none fw-semibold text-dark">
                                                    <%= item.productId.product_name %>
                                                </a>
                                                <br>
                                                <small class="text-muted"><%= item.productId.category %></small>
                                            </td>

                                            <td>$<%= item.productId.price.toFixed(2) %></td>

                                            <td class="text-center">
                                                <div class="d-flex justify-content-center align-items-center gap-2">
                                                    <form action="/cart/update" method="POST">
                                                        <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                                        <input type="hidden" name="action" value="decrease">
                                                        <button type="submit" class="btn btn-sm btn-outline-secondary px-2">-</button>
                                                    </form>

                                                    <span class="fw-bold"><%= item.quantity %></span>

                                                    <form action="/cart/update" method="POST">
                                                        <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                                        <input type="hidden" name="action" value="increase">
                                                        <button type="submit" class="btn btn-sm btn-outline-secondary px-2">+</button>
                                                    </form>
                                                </div>
                                            </td>

                                            <td class="fw-bold">
                                                $<%= (item.productId.price * item.quantity).toFixed(2) %>
                                            </td>

                                            <td>
                                                <form action="/cart/remove" method="POST" onsubmit="return confirm('Remove this item?');">
                                                    <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                                    <button type="submit" class="btn btn-link text-danger p-0" title="Remove">
                                                        âœ•
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="/shop" class="btn btn-outline-secondary">&larr; Continue Shopping</a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>$<%= grandTotal.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 text-muted">
                            <span>Tax (13%)</span>
                            <span>$<%= (grandTotal * 0.13).toFixed(2) %></span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total</span>
                            <span class="h5 fw-bold text-success">$<%= (grandTotal * 1.13).toFixed(2) %></span>
                        </div>

                        <button class="btn btn-success w-100 py-2 btn-lg shadow-sm">
                            Proceed to Checkout
                        </button>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</main>

<%- include("partials/footer") %>