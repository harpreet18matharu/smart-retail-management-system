<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= typeof title !=="undefined" ? title : "Retail Shop" %>
  </title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="/css/style.css" />
</head>

<body class="app-body">

  <% const activeTab = typeof active !== "undefined" ? active : ""; %>
  <% const currentUser = (typeof user !== 'undefined' && user) ? user : null; %>

  <nav class="navbar navbar-expand-lg shadow-sm glass-nav sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Retail Shop</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link <%= activeTab === 'home' ? 'active' : '' %>" href="/">Home</a>
          </li>
          
          <li class="nav-item">
            <% if (currentUser && currentUser.role === 'admin') { %>
                <a class="nav-link <%= activeTab === 'products' ? 'active' : '' %>" href="/products">Inventory</a>
            <% } else { %>
                <a class="nav-link <%= activeTab === 'products' ? 'active' : '' %>" href="/shop">Products</a>
            <% } %>
          </li>

          <% if (currentUser && currentUser.role === 'admin') { %>
            <li class="nav-item">
                <a class="nav-link <%= activeTab === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
            </li>
          <% } %>
        </ul>

        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center gap-3">
            
            <li class="nav-item">
                <a class="nav-link <%= activeTab === 'about' ? 'active' : '' %>" href="/about">About</a>
            </li>

            <li class="nav-item border-end pe-3 d-none d-lg-block"></li> 
            
            <% if (currentUser) { %>
                <li class="nav-item">
                    <span class="navbar-text me-2 small">Hi, <strong><%= currentUser.username %></strong></span>
                </li>
                <li class="nav-item">
                    <form action="/logout" method="POST" class="d-inline">
                        <button class="nav-link btn btn-link border-0 p-0" style="text-decoration: none;">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link <%= activeTab === 'login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary btn-sm rounded-pill px-3" href="/signup">Sign Up</a>
                </li>
            <% } %>

            <li class="nav-item d-flex align-items-center gap-3 ms-2">
                <a href="/cart" class="cart-wrapper position-relative text-dark text-decoration-none">
                    <span class="cart-icon fs-5">ðŸ›’</span>
                    <span class="cart-count-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                          id="cartCount" style="font-size: 0.6rem;">
                          <%= typeof cartCount !== 'undefined' ? cartCount : 0 %>
                    </span>
                </a>
            </li>
        </ul>

      </div>
    </div>
  </nav>